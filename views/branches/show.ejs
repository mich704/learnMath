                        <% if(currentPage==pages){  %>
                            <li class="disabled page-item"><a class="page-link" href="" >Nastƒôpna</a></li>
                        <% }else{ %>
                            <li class="page-item"><a class="page-link" href="/branches/<%=branch._id %>/<%= parseInt(currentPage) + 1 %>" >Nastƒôpna</a></li>
                        <% } %>  
                  
                    </ul>
                  </nav>
            </div>
            <div class="col-md-8  offset-md-2 mb-5">
                
            
              
                <% for( let i = start ; i <= end ; i++ ) { %>
                    <% var exercise =  branch.exercises[i] %> 
                    <% if(exercise){ %> 
