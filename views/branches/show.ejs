                                <div class="card mb-3 me-3 ms-3">
                                    <img id="exImg" src="/images/exercises/<%= exercise.image.name %>" alt="obraz" width="auto">
                                </div>
                                
                            
                            <% } %>  
                            <h6 class="card-title" >Odpowiedzi:</h6>
                            <ul id="answers" >
