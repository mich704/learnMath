<% layout('layouts/boilerplate') %>

<div class="row ">
<div class="col-md-4 offset-md-4 ">
    <div class="card mb-3" style="align-items: center;">
        <div class="card-header text-white" style="background-color: #457b9d; width: 100%; text-align: center;">
            <h2>Rejestracja</h2>
        </div>
    <div class="card-body" style="align-items: center; ">
                <form action="/register" method="POST" novalidate  class="validated-form" >
                    <div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email:</label>
                            <input class="form-control" type="email" name="email" id="email" placeholder="email" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="username">Nazwa użytkownika:</label>
                            <input class="form-control" type="text" name="username" id="username" placeholder="użytkownik" required>
                        </div>
                
                        <div  class="mb-3">
                            <label class="form-label" for="password">Hasło:</label>
                            <input class="form-control" type="password" name="password" id="password" placeholder="hasło" required>
                        </div>

                        <div  class="mb-3"> 
                            <label class="form-label" for="role">Typ użytkownika:</label>
                            <select class="form-control" type="text" name="role" id="role" placeholder="rola" required>
                           
                                    <option value="Uczeń" >Uczeń</option>
                                    <option value="Nauczyciel" >Nauczyciel</option>
                                    <option value="Admin" >Admin</option>
                              
                               
                            </select>
                        </div>

                    </div>
                    <div  style="text-align: center;">
                        <button class="btn btn-success">Zarejestruj się</button>
                    </div>
                    
                </form>
    </div>
</div>
</div>
</div>

    

