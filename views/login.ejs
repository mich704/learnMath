<% layout('layouts/boilerplate') %>


<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card mb-3" style="align-items: center;">
            <div class="card-header text-white" style="background-color: #457b9d; width: 100%; text-align: center;">
                <h2>Logowanie</h2>
            </div>
            <div class="card-body" style="align-items: center; ">
               
                <form action="/login" method="POST" novalidate  class="validated-form" >
                    <div>
                        <div class="mb-3">
                            <label class="form-label" for="username">Podaj nazwę użytkownika:</label>
                            <input class="form-control" type="text" name="username" id="username" placeholder="użytkownik" required>
                        </div>
                
                        <div  class="mb-3">
                            <label class="form-label" for="password">Podaj hasło:</label>
                            <input class="form-control" type="password" name="password" id="password" placeholder="hasło" required>
                        </div>
                    </div>
                    <div class="mb-3" style="text-align: center; ">
                        <button class="btn btn-success mb-3" >Zaloguj</button>
                        <br>
                        Nie posiadasz konta? <b> <a href="/register">Zarejestruj się</a></b>
                            
                    </div>
                    
                </form>
            </div>
            
        </div>
    </div>
</div>
    

    